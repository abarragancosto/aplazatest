{
  "extends": "standard",
  "env": {
    "node": true,
    "jest": true
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "comma-dangle": 1,
    "semi": ["error", "always"],
    "indent": "off",
    "no-tabs": "off",
    "padded-blocks": "off",
    "operator-linebreak": "off",
    "no-magic-numbers": ["warn", { "ignore": [0, 1] }],
    "no-undef": 0,
    "prefer-promise-reject-errors": "warn"
  }
}
